{
  "description": "Basic GitHub Action workflow",
  "labels": ["cicd", "gha"],
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "runner": {
        "type": "string",
        "enum": ["ubuntu-latest", "ubuntu-22.04", "ubuntu-20.04"]
      },
      "workflow_name": {
        "type": "string",
        "pattern": "^[a-zA-Z-]+$",
        "minLength": 1
      }
    },
    "required": ["runner", "workflow_name"]
  }
}

    
