{
  "description": "Basic GitHub Action workflow",
  "labels": ["cicd", "gha"],
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "ci_runner": {
        "type": "string",
        "enum": ["ubuntu-latest", "ubuntu-22.04", "ubuntu-20.04"]
      },
      "component_name": {
        "type": "string",
        "pattern": "^[a-zA-Z-]+$",
        "minLength": 1
      },
      "project_name": {
        "type": "string",
        "pattern": "^[a-zA-Z-]+$"
      },
      "project_slug": {
        "type": "string",
        "pattern": "^[a-z-]+$"
      },
      "author": {
        "type": "string",
        "format": "email",
        "default": "annonymous@tealium.com"
      },
      "version": {
        "type": "string",
        "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
      }
    },
    "required": ["ci_runner", "component_name"]
  }
}

    
