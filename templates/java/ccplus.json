{
    "description": "Java component",
    "labels": ["java"],
    "schema": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
          "java_version": {
            "type": "string",
            "enum": ["8", "11", "17"]
          },
          "component_name": {
            "type": "string",
            "pattern": "^[a-zA-Z-]+$",
            "minLength": 1
          },
          "project_name": {
            "type": "string",
            "pattern": "^[a-zA-Z-]+$"
          },
          "project_slug": {
            "type": "string",
            "pattern": "^[a-z-]+$"
          },
          "author": {
            "type": "string",
            "format": "email",
            "default": "annonymous@tealium.com"
          },
          "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
          },
          "jenkins_shared_lib_version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
          },
          "echo": {
            "type": "string",
            "pattern": "^[a-zA-Z\\-\\s]+$"
          }
      },
      "required": ["java_version", "component_name"]
    }
  }
