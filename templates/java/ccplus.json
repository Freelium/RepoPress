{
    "description": "Java component",
    "labels": ["java"],
    "schema": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
          "repository_name": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "java_version": {
            "type": "string",
            "enum": ["8", "11", "17"]
          },
          "jenkins_shared_lib_version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
          },
          "echo": {
            "type": "string",
            "pattern": "^[a-zA-Z\\-\\s]+$"
          }
      },
      "required": ["java_version", "component_name"]
    }
  }
