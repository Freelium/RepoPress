{
  "description": "Basic GitHub Action workflow",
  "labels": ["cicd", "gha"],
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "component_name": {
        "type": "string",
        "pattern": "^[a-zA-Z-]+$",
        "minLength": 1
      },
      "author": {
        "type": "string",
        "format": "email",
        "default": "annonymous@tealium.com"
      },
      "version": {
        "type": "string",
        "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
      }
    },
    "required": ["component_name"]
  }
}

    
